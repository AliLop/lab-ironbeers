<div class="container">
   <h1>Random Beer</h1> 
    <div class="row">
              
<div class="col-md-8">
   
        <img class="card-img-top random-img" src={{image_url}}/>
        <div class="card-body random-body">
            <h4 class="card-title">{{name}}</h4>
            <h6 class="card-tagline">{{tagline}}</h6>
            <h6 class="card-pairing">Food pairing</h6>
            <ul>
                {{#each food_pairing}}
                <li>{{this}}</li>
                {{/each}}
                </ul>
            </ul> 
            <h6 class="card-tips">Brewers tips</h6>
            <p class="card-text">{{brewers_tips}}</p>
        </div>
   
</div>

    </div>
</div>